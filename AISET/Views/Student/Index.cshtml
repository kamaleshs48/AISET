
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutStudent.cshtml";

}

@model AISET.Models.StudentModels





<div class="panel panel-primary">

    <div class="panel-body">


        @using (Html.BeginForm("Index", "Student", FormMethod.Post))
        {

            <h3>@ViewBag.Message</h3>
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.StudentID)
            <div class="form-group">
                <label for="email">First Name:</label>
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })

            </div>
            <div class="form-group">
                <label for="pwd">Last Name:</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="pwd">DOB:</label>
                @Html.TextBoxFor(m => m.DOB, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="pwd">Email:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group">
                <label for="pwd">Mobile No:</label>
                @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn-block btn btn-primary">Update</button>
        }

    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


